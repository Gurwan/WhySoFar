{
    "manifest_version": 3,
    "name": "WhySoFar",
    "version": "0.3.0",

    "action": {
        "default_title": "WhySoFar",
        "default_popup": "popup.html"
    },
    "description": "Obtenir l'indicateur Ã©cologique d'un produit",

    "author": "adressemail@gmail.com",

    "permissions": ["tabs"],
    "host_permissions": ["https://*.fnac.com/*","https://*.cdiscount.com/*","https://*.amazon.fr/*"],
    "content_scripts": [
        {
            "matches": ["https://*.fnac.com/*","https://*.cdiscount.com/*","https://*.amazon.fr/*"],
            "js": ["fnac.js","cdiscount.js","amazon.js"]
        }
    ]
}